class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int i=0,j=0;
        int ans=0;
        while(j<nums.length)
        {
            if(nums[j]!=1)
            {
                ans=Math.max(ans,j-i);
                j=j+1;
                i=j;
            }
            else
            j++;

        }
        if(i<nums.length)
        {
             ans=Math.max(ans,j-i);
        }
        return ans;
    }
}
