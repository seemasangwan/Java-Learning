class Solution {
    public int longestSubarray(int[] nums, int k) {
       HashMap<Integer ,Integer>mp=new HashMap<>();
       mp.put(0,-1);
       int ans=0,sum=0;
       for(int i=0;i<nums.length;i++)
       { 
        sum=sum+nums[i];
        if(mp.containsKey(sum-k)==true)
        {
            ans=Math.max(ans,i-mp.get(sum-k));
        }
        if(!mp.containsKey(sum))
        {
            mp.put(sum,i);
        }
         
       }
       return ans;
    }
}
