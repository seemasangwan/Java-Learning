class Solution {
    public int subarraySum(int[] nums, int k) {
     int j=0;
     int sum=0;
     int ans=0;
     HashMap<Integer ,Integer>mp=new HashMap<>();
     mp.put(0,1);
     while(j<nums.length)
     {

        // sum=k (i to j)
        // sum between 0 to j
       sum+=nums[j];
       // sum between 0 to i
       if(mp.containsKey(sum-k)==true)
       {
        ans=ans+mp.get(sum-k);
       }
       mp.put(sum,mp.getOrDefault(sum,0)+1);
       j++;
     }
     return ans;
    }
}



